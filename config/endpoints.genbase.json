{
  "wallet": {
    "provider": "cdp-embedded",
    "network": "base",
    "privateKey": "${PRIVATE_KEY}"
  },
  "endpoints": [
    {
      "id": "genbase_video",
      "name": "Generate Video",
      "url": "https://www.genbase.fun/api/video/create-sora2",
      "method": "POST",
      "description": "Generate a video using AI from a text prompt. Returns a task ID that can be polled for completion. The AI will create a video based on your description.",
      "category": "media",
      "parameters": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Text description of the video to generate"
          },
          "duration": {
            "type": "string",
            "description": "Video duration in seconds",
            "enum": ["10", "15"]
          }
        },
        "required": ["prompt"]
      },
      "estimatedCost": "$0.20",
      "trusted": true
    }
  ]
}
